<?php 
$forum = store::getViewValue('forum');
$posts_per_page = tool::getPostsPerPage();

// separate sticky from normal topics
$topics = store::getViewValue('topics');
$stickyTopics = array();
$normalTopics = array();
foreach ($topics as $topic) {
    if ($topic->sticky) {
        $stickyTopics[] = $topic;
    } else {
        $normalTopics[] = $topic;
    }
}
